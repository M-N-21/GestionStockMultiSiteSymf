{% extends 'base.html.twig' %}

{% block title %}Liste des Categorie{% endblock %}

{% block body %}
    <h1>Liste des Categories</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                {# <td>{{ categorie.id }}</td> #}
                <td>{{ categorie.nom }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">Voir</a>
                    <a class="btn btn-warning" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}">Create new</a>
{% endblock %}
